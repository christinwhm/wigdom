<%= semantic_form_for([:admin, @category]) do |f| %>
  <%= f.inputs do %>
    <%= f.input :name, :required => true %>
    <%= f.input :parent_id, :as => :select, :collection => nested_set_options(Category, @category) {|i| "#{'-' * i.level} #{i.name}"}, :include_blank => true %>
  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button "Done" %>
  <% end %>
<% end %>
