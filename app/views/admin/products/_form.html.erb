<%= semantic_form_for([:admin, @product], :html => {:multipart => true}) do |f| %>
  <%= f.inputs do %>
    <%= f.input :name, :required => true %>
    <%= f.input :description, :required => true, :input_html => {:class => "mceEditor"} %>
    <%= f.input :category_ids, :label => "Categories", :as => :check_boxes, :collection => Category.leaves(:order => "name"), :required => true %>
    <%= f.input :image, :as => :file, :required => true %>
  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button "Done" %>
  <% end %>

<% end %>
