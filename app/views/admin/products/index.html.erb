<h1>Listing Products</h1>

<table border='1px, solid'>
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Category</th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= link_to image_tag(product.image.url(:thumb)), [:admin, product] %></td>
    <td><%= product.name %></td>
    <td><%= product.categories.any? ? product.categories.map(&:name).join(", ") : "<blink>NO CATEGORY</blink>".html_safe%></td>
    <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
    <td><%= link_to 'Destroy', [:admin, product], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_admin_product_path %>
