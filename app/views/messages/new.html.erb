<%= content_for :head do %>
  <%= javascript_include_tag "validator.min" %>
  <script type='text/javascript'>
    $(function() {
        $("#message_form").validator();
    });
  </script>
<% end %>

<%= semantic_form_for @message, :html => {:id => "message_form"} do |f| %>
  <%= f.inputs do %>
    <%= f.input :name, :required => true, :input_html => {:required => true} %>
    <%= f.input :email, :as => :email, :required => true, :input_html => {:required => true} %>
    <%= f.input :body, :as => :text, :required => true, :input_html => {:required => true} %>
  <% end %>

  <%= f.buttons do %>
    <%= recaptcha_tags :ajax => true %>
    <%= f.commit_button "Done"%>
  <% end %>
<% end %>
