<!DOCTYPE html>
<html>
<head>
  <title>Wigdom</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag "jquery.min", "rails", "application" %>
  <%= yield :head %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="header" class="container_12">
    <div class="grid_3 ">
      Here comes the logo
    </div>

    <div class="grid_9 ">
      <%= link_to "Product", products_path %>
    </div>
  </div>

  <div id="content" class="container_12">
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% elsif alert %>
      <p class="alert"><%= alert %></p>
    <% end %>

    <%= yield %>
  </div>

  <div id="footer" class="container_12">
    <div class="grid_12 ">
      <a href="/contact">Contact Us</a> | <a href="/admin">Admin</a>
    </div>
  </div>
</body>
</html>
