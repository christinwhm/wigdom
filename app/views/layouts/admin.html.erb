<!DOCTYPE html>
<html>
<head>
  <title>Wigdom: Admin</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag "jquery.min", "rails" %>
  <%= include_tiny_mce_if_needed %>
  <%= yield :head %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="header" class="container_12">
    <div class="grid_9">
      <ul class='nav'>
        <li><a href='/admin/products'>Product</a><li>
        <li><a href='/admin/categories'>Category</a></li>
        <li><a href='/admin/pages'>Page</a></li>
      </ul>
    </div>
    <div class="grid_3">
      <ul class='nav'>
        <li><a href='/'>Main</a></li>
        <li><a href='/admins/sign_out'>Sign out</a></li>
      </ul>
    </div>
  </div>

  <div id="content" class="container_12">
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% elsif alert %>
      <p class="alert"><%= alert %></p>
    <% end %>

    <%= yield %>
  </div>
</body>
</html>
